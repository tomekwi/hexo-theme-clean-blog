<%
    const authorShortName =
        item.author && item.author.match(/.+?(?=\s|$)/)[0];
    const authorMarkup =
        `<span title="${item.author}">${authorShortName}</span>`;
%>
Posted
<% if (item.author && item.author_url) { %>
by <a href="<%- item.author_url %>"><%- authorMarkup %></a>
<% } else if (item.author) { %>
by <%- authorMarkup %>
<% } %>
on the <time
    datetime="<%- item.date.format() %>"
    title="<%- item.date.format('D MMMM YYYY, HH:mmâ€‚(Z)') %>"
    >
    <%= item.date.format('Do [of] MMMM YYYY') %>
</time>
